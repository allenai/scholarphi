  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Server",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "args": [
        "${workspaceFolder}/src/index.ts"
